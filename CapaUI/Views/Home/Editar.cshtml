@model Models.Empleados_ET
@{
    ViewBag.Title = "Editar";
    List<Models.Puestos_ET> Puestos = ViewBag.Puestos;
}

<h2>Editar</h2>

@using (Html.BeginForm("Actualizar", "Home", FormMethod.Post))
{
    <div class="container">
        @Html.HiddenFor(model => model.Id_NumEmp)

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre)
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Apellidos)
            @Html.TextBoxFor(model => model.Apellidos, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Puesto)
            <select name="Id_Puesto" class="form-control">
                @foreach (var m in Puestos)
                {
                    <option value="@m.Id_Puesto">
                        @m.Puesto
                    </option>
                }
            </select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-secondary">Modificar</button>
        </div>
    </div>
}