@model Models.Empleados_ET

@{
    ViewBag.Title = "Agregar";
    List<Models.Puestos_ET> Puestos = ViewBag.Puestos;
}

<h2>Agregar</h2>


<h2>Agregar</h2>

@using (Html.BeginForm("Registro", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Nombre)
        @Html.TextBoxFor(p => p.Nombre, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Apellidos)
        @Html.TextBoxFor(p => p.Apellidos, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Puesto)
        <select name="Id_Puesto" class="form-control">
            @foreach (var m in Puestos)
            {
                <option value="@m.Id_Puesto">
                    @m.Puesto
                </option>
            }
        </select>
    </div>
    <div class="form-control">
        <button type="submit">Registrar</button>
    </div>
}